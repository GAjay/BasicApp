<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/parcel_filter_list_item_bg"
    android:focusable="false"
    android:padding="3dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/filter_choice_radio_button"
        android:layout_width="22dp"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_collected_icon"
        android:focusableInTouchMode="false"
        android:layout_height="22dp" />

    <com.basic.views.DwellTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="filter Text"
        android:id="@+id/filter_text"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:textColor="@color/parcel_label_color"
        android:textSize="20sp" />
</LinearLayout>